{
  "name": "agent-manager",
  "version": "1.0.0",
  "description": "Agent-agnostic desktop coding environment using ACP Registry",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build && npm run build:mcp",
    "build:mcp": "vite build --config vite.mcp.config.ts",
    "preview": "electron-vite preview",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"electron.vite.config.ts\" \"vite.mcp.config.ts\" \"tailwind.config.ts\"",
    "test": "xvfb-run --auto-servernum npx playwright test",
    "test:headed": "npx playwright test --headed",
    "postinstall": "electron-builder install-app-deps",
    "install:node-pty": "npm install node-pty && electron-builder install-app-deps",
    "build:win": "electron-vite build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "dist": "electron-vite build && electron-builder"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.14.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "electron-store": "^8.2.0",
    "monaco-editor": "^0.52.2",
    "node-pty": "^1.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^9.0.3",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.0",
    "simple-git": "^3.27.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^15.15.0",
    "playwright": "^1.58.2",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^5.4.0"
  }
}
